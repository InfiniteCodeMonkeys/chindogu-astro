---
import { getCollection } from 'astro:content';
import ProjectList from '../blog/BlogList.astro';
import { Card } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
  title: string;
  collection: string;
}

const { count, title, collection } = Astro.props;

const posts = await getCollection(collection).then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        {title}
      </h2>
    </div>
    <ProjectList posts={posts} />
  </Card>
</section>
